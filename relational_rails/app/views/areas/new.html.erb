<%= form_with url: '/areas', method: :post, local: true do |form|%>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :rock_type %>
  <%= form.text_field :rock_type %>

  <%= form.label :state %>
  <%= form.text_field :state %>

  <%= form.label :county %>
  <%= form.text_field :county %>

  <%= form.label :approach_distance %>
  <%= form.number_field :approach_distance %>

  <%= form.label :roadside_access %>
  <%= form.check_box :roadside_access %>

  <%= form.submit "Create Area" %>
<% end %>
