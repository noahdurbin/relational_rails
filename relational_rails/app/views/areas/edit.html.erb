<%= form_with url: "/areas/#{@area.id}", method: :patch, local: true do |form|%>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :rock_type, "Rock Type" %>
  <%= form.text_field :rock_type %>

  <%= form.label :state %>
  <%= form.text_field :state %>

  <%= form.label :county %>
  <%= form.text_field :county %>

  <%= form.label :approach_distance, "Approach Distance" %>
  <%= form.number_field :approach_distance %>

  <%= form.label :roadside_access, "Roadside Access" %>
  <%= form.check_box :roadside_access %>

  <%= form.submit "Update Area" %>
<% end %>
